<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/adapterFipper"
        android:layout_width="263dp"
        android:layout_height="30dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/holo_orange_dark"
        android:text="AdapterViewFipper"
        android:onClick="openAdapterFipper"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageSwitcher" />

    <TextView
        android:id="@+id/autoComplete"
        android:layout_width="263dp"
        android:layout_height="30dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="148dp"
        android:background="@android:color/holo_blue_bright"
        android:onClick="openAutoComplete"
        android:text="AutoCompleteTextView"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scrollView"
        android:layout_width="263dp"
        android:layout_height="30dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="28dp"
        android:background="#E9ED77"
        android:text="ScrollView"
        android:onClick="openScrollView"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stackView" />

    <TextView
        android:id="@+id/textSwitcher"
        android:layout_width="263dp"
        android:layout_height="30dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/holo_green_light"
        android:onClick="openTextSwitcher"
        android:text="TextSwicther"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/autoComplete" />

    <TextView
        android:id="@+id/imageSwitcher"
        android:layout_width="263dp"
        android:layout_height="30dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/holo_red_light"
        android:text="ImageSwitcher"
        android:onClick="openImageSwitcher"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSwitcher" />

    <TextView
        android:id="@+id/stackView"
        android:layout_width="263dp"
        android:layout_height="30dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="28dp"
        android:background="#B5C0FD"
        android:text="StackView"
        android:textAlignment="center"
        android:onClick="openStackView"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adapterFipper" />


</androidx.constraintlayout.widget.ConstraintLayout>