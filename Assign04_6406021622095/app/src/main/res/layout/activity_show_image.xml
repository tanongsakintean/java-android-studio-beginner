<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ShowImage">

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#00BCD4"
        android:text="Gallery Picture"
        android:textAlignment="center"
        android:textColor="#0000FF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/amounus"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@mipmap/amountus" />

        <ImageButton
            android:id="@+id/blue"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher_foreground" />

        <ImageButton
            android:id="@+id/spderman"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@mipmap/spiderman" />

        <ImageButton
            android:id="@+id/tom"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@mipmap/tom" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/jerry"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@mipmap/jerry" />

        <ImageButton
            android:id="@+id/pikashu"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@mipmap/pikashu" />

        <ImageButton
            android:id="@+id/shark"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@mipmap/shark" />

        <ImageButton
            android:id="@+id/person"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@mipmap/person" />
    </LinearLayout>

    <ImageView
        android:id="@+id/showImage"
        android:layout_width="match_parent"
        android:layout_height="366dp"
        android:layout_weight="1"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

</LinearLayout>