<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="303dp"
            android:layout_height="107dp"
            android:background="#FFC107"
            android:paddingVertical="20dp"
            android:text="ข้อสอบกลางภาค\n060243118"
            android:textAlignment="center"
            android:textColor="#0000FF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:padding="-20dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />

    </LinearLayout>

    <Button
        android:id="@+id/btnCale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#3F51B5"
        android:drawableRight="@android:drawable/btn_star_big_on"
        android:text="โปรแกรมคำนวณเกรดเฉลี่ย"
        android:textColorHighlight="#571616"
        android:textColorLink="#CF3F3F"
        app:iconGravity="end" />

    <Button
        android:id="@+id/btnVat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#3F51B5"
        android:drawableRight="@android:drawable/btn_star_big_on"
        android:text="โปรแกรมคำนวณภาษี"
        app:iconGravity="end" />

    <Button
        android:id="@+id/btnImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#3F51B5"
        android:drawableRight="@android:drawable/btn_star_big_on"
        android:text="โปรแกรมนำเสนอภาพ"
        app:iconGravity="end" />

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#3F51B5"
        android:drawableRight="@android:drawable/btn_star_big_on"
        android:text="เกี่ยวกับโปรแกรม"
        app:iconGravity="end" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        app:srcCompat="@android:drawable/ic_menu_revert" />

</LinearLayout>