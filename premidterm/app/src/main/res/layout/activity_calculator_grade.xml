<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".calculatorGrade">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="#F18FB0"
        android:paddingVertical="2dp"
        android:text="โปรแกรมคำนวณเกรดเฉลี่ย"
        android:textAlignment="center"
        android:textColor="#0000FF"
        android:textSize="30sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/inputGrade1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:background="#FBEAEA"
        android:ems="10"
        android:hint="ใส่เกรด 1(A,B,C,D,F) :"
        android:inputType="text"
        android:outlineProvider="none"
        android:padding="5dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/inputGrade2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:background="#FBEAEA"
        android:ems="10"
        android:hint="ใส่เกรด 2(A,B,C,D,F) :"
        android:inputType="text"
        android:outlineProvider="none"
        android:padding="5dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/inputGrade3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:background="#FBEAEA"
        android:ems="10"
        android:hint="ใส่เกรด 3(A,B,C,D,F) :"
        android:inputType="text"
        android:outlineProvider="none"
        android:padding="5dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/inputGrade4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:background="#FBEAEA"
        android:ems="10"
        android:hint="ใส่เกรด 4(A,B,C,D,F) :"
        android:inputType="text"
        android:outlineProvider="none"
        android:padding="5dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/inputGrade5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:background="#FBEAEA"
        android:ems="10"
        android:hint="ใส่เกรด 5(A,B,C,D,F) :"
        android:inputType="text"
        android:outlineProvider="none"
        android:padding="5dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:backgroundTint="#673AB7"
        android:text="คำนวณเกรดเฉลี่ย" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:background="#EDEDEF"
        android:paddingLeft="10dp"
        android:text="Result:"
        android:textColor="#3F51B5"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:backgroundTint="#673AB7"
        android:text="ย้อนกลับ"
        app:icon="@android:drawable/ic_menu_revert" />

</LinearLayout>