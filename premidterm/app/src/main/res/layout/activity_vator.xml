<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".vator">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F18FB0"
        android:paddingVertical="2dp"
        android:text="โปรแกรมคำนวณภาษี"
        android:textAlignment="center"
        android:textColor="#0000FF"
        android:textSize="34sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/inputSalary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="10dp"
        android:background="#FFEB3B"
        android:ems="10"
        android:hint="ใส่จำนวนเงินเดือน"
        android:inputType="number"
        android:outlineProvider="none"
        android:padding="5dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="#EFEEEE"
        android:orientation="vertical"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="319dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="จำนวนบุตร"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />

                <RadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2" />
            </RadioGroup>
        </LinearLayout>

        <EditText
            android:id="@+id/inputLife"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="10dp"
            android:background="#FFEB3B"
            android:ems="10"
            android:hint="จำนวนประกันชีวิต"
            android:inputType="number"
            android:outlineProvider="none"
            android:padding="5dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="10dp"
            android:background="#FFEB3B"
            android:ems="10"
            android:hint="จำนวนดอกเบี้ยบ้าน"
            android:inputType="number"
            android:outlineProvider="none"
            android:padding="5dp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSubmitVat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#3F51B5"
        android:text="คำนวนภาษี"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/resultVat"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="#03A9F4"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="ผลลัพธ์"
        android:textColor="#F60EF3"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="vertical">

    </LinearLayout>

    <Button
        android:id="@+id/btnVatBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:backgroundTint="#3F51B5"
        android:text="ย้อนกลับ"
        app:icon="@android:drawable/ic_menu_revert" />

</LinearLayout>